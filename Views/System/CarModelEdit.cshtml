@model TemplateProject.Models.CarModels

@{
    ViewData["Title"] = "Modeli Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        Modeli Güncelle
                    </h3>
                </div>
                <div class="box-body">
                    <div class="col-md-4">
                        <form asp-action="CarModelEdit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CarBrandName" class="control-label"></label>
                                <select asp-for="CarBrandId" class="form-control" asp-items="ViewBag.CarBrandId"></select>
                                <span asp-validation-for="CarBrandId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Kaydet" class="btn btn-primary" />
                                <a class="btn btn-dark" asp-action="CarModelIndex">Listeye Geri Dön</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>