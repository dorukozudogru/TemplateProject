@model TemplateProject.Models.Customers

@{
    ViewData["Title"] = "Müşteriyi Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="box-header">
            <h3>Bu müşteriyi silmek istediğinizden emin misiniz?</h3>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Surname)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Surname)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CitizenshipNo)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CitizenshipNo)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Phone)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Phone)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Other)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Other)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Evet" class="btn btn-danger" />
                            <a class="btn btn-dark" asp-action="Index">Listeye Geri Dön</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
